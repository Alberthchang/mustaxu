extends ../layout

block content
	.container
		.row
			.col-md-8
					each u in article
						.media
							a.media-left(href="/p/#{u.id}")
								img(src="data:image/svg+xml;base64,")
							.media-body
								h4.media-heading #{u.title}
								span #{u.content}
			.col-md-4
					span dd
		.row
			nav
				ul.pagination
					- for (var i = 1; i < pageNum+1; ++i) {
						li: a(href="/page/#{i}") #{i} 
					- }